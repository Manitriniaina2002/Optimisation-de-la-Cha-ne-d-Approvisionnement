# Configuration de l'environnement Big Data Supply Chain

# Base de données
DATABASE_URL=postgresql://user:password@localhost:5432/supply_chain_db
MONGODB_URL=mongodb://localhost:27017/supply_chain_mongo
REDIS_URL=redis://localhost:6379/0

# APIs externes
WEATHER_API_KEY=your_openweather_api_key
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
TRAFFIC_API_KEY=your_traffic_api_key

# Services Cloud
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=supply-chain-data

AZURE_STORAGE_CONNECTION_STRING=your_azure_connection_string
AZURE_CONTAINER_NAME=supply-chain-container

# IoT et capteurs
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_USERNAME=your_mqtt_username
MQTT_PASSWORD=your_mqtt_password

INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your_influxdb_token
INFLUXDB_ORG=your_organization
INFLUXDB_BUCKET=supply_chain_metrics

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_DEMAND=demand_forecasting
KAFKA_TOPIC_TRANSPORT=transport_optimization
KAFKA_TOPIC_MAINTENANCE=predictive_maintenance
KAFKA_TOPIC_RISK=risk_management

# Machine Learning
ML_MODEL_PATH=models/
PROPHET_MODEL_PATH=models/prophet/
XGBOOST_MODEL_PATH=models/xgboost/
LSTM_MODEL_PATH=models/lstm/

# Dashboard et API
DASH_HOST=0.0.0.0
DASH_PORT=8050
DASH_DEBUG=True

API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=your_super_secret_key_here

# Monitoring
PROMETHEUS_PORT=8001
LOG_LEVEL=INFO

# Notifications
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# Sécurité
JWT_SECRET_KEY=your_jwt_secret_key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Optimisation
OPTIMIZATION_THREADS=4
BATCH_SIZE=1000
MAX_ITERATIONS=1000

# Cache
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000

# Développement
ENVIRONMENT=development
DEBUG=True
TESTING=False
